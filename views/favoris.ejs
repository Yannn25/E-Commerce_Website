         <section>
            <div class="Prcontainer">
              <div class="row justify-content-center">
                <div class="col-md-7 col-lg-4 mb-5 mb-lg-0 wow fadeIn">
                  <div class="card border-0 shadow">
                    <div class="card-body p-1-9 p-xl-5">
                      <div class="mb-4">
                        <h3 class="h4 mb-0"><%= infoClient.nom %> <%= infoClient.prenom%></h3></h3>
                      </div>
                      <ul class="list-unstyled mb-4">
                        <li class="mb-3">
                          <a href="#!">
                            <i class="far fa-envelope display-25 me-3 text-secondary"></i><%= infoClient.email %>
                          </a>
                        </li>
                        <li class="mb-3">
                          <a href="#!">
                            <i class="fas fa-mobile-alt display-25 me-3 text-secondary"></i><%= infoClient.adresse%>
                          </a>
                        </li>
                        <li>
                          <a href="#!">
