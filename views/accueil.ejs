      <section class="articles">
        <div class="container">
            <% let i;
              for (i = 0; i < contenus.length; i++) { 
                %>
            <div class="col-md-3">
                <div class="produit">
                    <div class="img-produit">
                        <a href="#"> 
                          <img class="imgp" src="<%= contenus[i].image %>" alt="<%= contenus[i].nom %>" style="width:100%">
                        </a>
                    </div>
                    <div class="ecrit-produit">
                      <h3 class="nom produit"><%= contenus[i].nom%></h3>
                      <p class="desc-produit"> <%= contenus[i].description %> </p>
                    </div>
                    <div class="prix-produit"><%= contenus[i].prix %></div>
                    
                    <div class="icones-produit">
                        <a href="#">
                            <i class="far fa-heart"></i>
                            <span class="product-tooltip">wishlist</span>
                        </a>
                        <a href="#">
                            <i class="bi bi-eye"></i>
                            <span class="product-tooltip">voir</span>
                        </a>
                        <form action="/addPanier" method="POST"></form>
                        <button>
                            <i class="bi bi-cart-plus-fill"></i>
                            <span class="product-tooltip">panier</span>
                        </button>
                  </div>
                  <select name="taille" id="taille-select">
                    <% for (let j = 0; j < tailles.length; j++) { %>
                      <% if (tailles[j].quantite > 0 && tailles[j].id == contenus[i].id_vetement) { %> 
                        <option value="<%= tailles[j].taille %>"><%= tailles[j].taille %></option>
                      <% } %>
                    <% } %>
                  </select>
                  <input type="hidden" name="id" value="<%= contenus[i].id_vetement %>">
                  <input type="hidden" name="nom" value="<%= contenus[i].nom%>">
                  <input type="hidden" name="prix" value="<%= contenus[i].prix %>">
                  <input type="hidden" name="quantite" value="1">
                </div>
            </div>
          </form>
            <% } %>
      </div>
    </section>


